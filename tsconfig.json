{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src/ts/",
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules"]
}
